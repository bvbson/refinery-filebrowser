<ul class="jqueryFileTree" style="display: none;">
  <% @dirs.each do |dir| %>
    <li class="directory collapsed">
      <a href="#" class="directory" rel="<%= File.join(@parent,dir,"/") %>"><%= dir %></a></li>
  <%end%>
  <% unless @files.empty? %>
    <%= link_to "#", :class =>"toggle", "data-toggle".to_sym => true do %>
      <%= image_tag "clip_select.gif" %> Toggle selection
    <% end %>
    <%= link_to "#", :class =>"select_all", "data-select".to_sym => true do %>
      <%= image_tag "clip_select.gif" %> Select all/none
    <% end %>
    <div class="files">
      <% @files.each do |file|%>
        <li class="file ext_<%=File.extname(file)[1..-1]%>">
          <input type="checkbox" name ="<%= File.join(@parent,file) %>" />
          <%= file %>
        </li>
      <% end %>
    </div>
  <% end %>
</ul>