<% content_for :body_content_title do %>
  <%= @refinery_filebrowser.name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Name</h3>
    <%=raw @refinery_filebrowser.name %>
  </div>
  
  <div>
    <h3>Parent</h3>
    <%=raw @refinery_filebrowser.parent_id %>
  </div>
  
  <div>
    <h3>Lft</h3>
    <%=raw @refinery_filebrowser.lft %>
  </div>
  
  <div>
    <h3>Rgt</h3>
    <%=raw @refinery_filebrowser.rgt %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="refinery_filebrowsers">
    <% @refinery_filebrowsers.each do |refinery_filebrowser| %>
      <li>
        <%= link_to refinery_filebrowser.name, refinery_filebrowser_url(refinery_filebrowser) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
